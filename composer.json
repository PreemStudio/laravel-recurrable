{
    "name": "basecodeoy/recurrable",
    "description": "A package to easily use recurrence rules with Laravel.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "BaseCode Oy",
        "laravel",
        "recurrable"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@basecode.sh",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/basecodeoy/recurrable",
    "support": {
        "issues": "https://github.com/basecodeoy/recurrable/issues",
        "source": "https://github.com/basecodeoy/recurrable",
        "security": "https://github.com/basecodeoy/recurrable/blob/main/.github/SECURITY.md"
    },
    "require": {
        "php": "^8.3",
        "basecodeoy/crate": "^1.0.0",
        "illuminate/contracts": "^11.0",
        "nesbot/carbon": "^2.72.5",
        "simshaun/recurr": "^5.0.2"
    },
    "require-dev": {
        "basecodeoy/standards": "^1.1.1"
    },
    "autoload": {
        "psr-4": {
            "BaseCodeOy\\Recurrable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "audit": {
            "abandoned": "report"
        },
        "preferred-install": "dist",
        "sort-packages": true
    }
}
